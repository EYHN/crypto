{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "declaration": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "typeRoots": [
        "./node_modules/@types"
    ],
    "outDir": "lib"
  },
  "exclude": [
    "node_modules",
    "test",
    "lib"
  ]
}